properties:
  note.categories:
    displayName: Course
views:
  - type: table
    name: Table
    filters:
      and:
        - file.path.contains("02. curriculums")
        - "!categories.isEmpty()"
    groupBy:
      property: categories
      direction: ASC
    order:
      - title
      - file.name
      - stage
      - lesson
    sort:
      - property: stage
        direction: ASC
      - property: lesson
        direction: ASC
      - property: file.name
        direction: ASC
    columnSize:
      note.title: 101
      file.name: 374
