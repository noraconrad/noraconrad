properties:
  note.categories:
    displayName: Course
views:
  - type: table
    name: Table
    filters:
      and:
        - file.path.contains("02. curriculums")
        - categories == ["system-ops"]
    groupBy:
      property: stage
      direction: ASC
    order:
      - file.name
    sort:
      - property: stage
        direction: DESC
      - property: lesson
        direction: ASC
    columnSize:
      file.name: 475
      note.title: 156
      note.stage: 102
